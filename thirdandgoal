---
- hosts: all
  remote_user: root
  vars:
    zonename: puppet.man
    master: 192.168.122.2
  tasks:
    - name: Make sure bind is installed
      package:
        name: bind
        state: latest

    - name: copy config file to client
      template:
        src: named.j2
        dest: /etc/named.conf
        owner: root
        group: named
        mode: 0640
      notify:
        - restart named

    - name: make sure named is running
      service:
        name: named
        state: started

  handlers:
    - name: restart named
      service:
        name: named
        state: restarted
